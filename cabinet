arg="$1"

: "${CAB_PATH:=/home/rsm/.config/cabinet.conf}"
: "${CAB_BRANCH:=$(git config --get init.defaultBranch)}"
: "${CAB_REPO:?Error: CAB_REPO is not set}"

paths_file="$CAB_PATH"

if [[ ! -f "$paths_file" ]]; then
	echo "Configuration file not found!"
	echo "Please generate a config or adjust the path using CAB_PATH" 
	exit 1
fi

mapfile -t paths < "$paths_file"

echo "Files to sync:"
for path in "${paths[@]}"; do
	echo "$path"
done

cd ~

git init
git remote add origin $CAB_REPO

cd .config

case "$arg" in 
	push)
		echo "Pushing dotfiles..."
		for path in "${paths[@]}"; do
			git add "$path"
		done
      if (CAB_MSG=="false") 
		git commit
		git push --set-upstream origin "$CAB_BRANCH"
		;;
	pull)
		echo "Pulling dotfiles..."
		git pull origin "$CAB_BRANCH"

		for path in "${paths[@]}"; do
			echo "Pulling $path from remote..."
			git checkout origin/"$CAB_BRANCH" -- "$path"
		done
		;;
	--help)
		echo "Paths file: $paths_file"
		;;
	*)
		echo "Error: unknown argument"
		;;
esac

cd ~
sudo rm -r .git
